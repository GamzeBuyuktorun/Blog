@model BlogProject.Models.User
@{
    ViewData["Title"] = "Kayıt Ol";
}

<h2>Kayıt Ol</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Şifre</label>
        <input name="PasswordHash" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label>Şifre Tekrar</label>
        <input name="passwordConfirm" type="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Kayıt Ol</button>
</form>
