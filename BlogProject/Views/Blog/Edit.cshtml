@model BlogProject.Models.Blog

@{
    ViewData["Title"] = "Blog Düzenle";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-edit"></i> Blog Düzenle</h4>
            </div>
            <div class="card-body">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <h6>Hatalar:</h6>
                        <ul class="mb-0">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }

                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Blog Başlığı *</label>
                        <input asp-for="Title" class="form-control" placeholder="Blogunuzun başlığını girin" required />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Blog Açıklaması</label>
                        <textarea asp-for="Description" class="form-control" rows="3" 
                                  placeholder="Blog hakkında kısa bir açıklama (isteğe bağlı)"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <div class="form-text">Bu açıklama blog listesinde görünecektir.</div>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Değişiklikleri Kaydet
                        </button>
                        
                        <a href="@Url.Action("MyBlogs", "Blog")" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> İptal
                        </a>
                        
                        <a href="@Url.Action("Details", "Blog", new { slug = Model.Slug })" class="btn btn-outline-info">
                            <i class="fas fa-eye"></i> Blog'u Görüntüle
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}