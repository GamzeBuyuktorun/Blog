@model IEnumerable<BlogProject.Models.Blog>

@{
    ViewData["Title"] = "Tüm Bloglar";
}

<div class="mb-4">
    <h2><i class="fas fa-blog"></i> Tüm Bloglar</h2>
</div>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var blog in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="@Url.Action("Details", "Blog", new { slug = blog.Slug })" 
                               class="text-decoration-none">
                                @blog.Title
                            </a>
                        </h5>
                        
                        <p class="text-muted small">
                            <i class="fas fa-user"></i> @(blog.Owner?.Username ?? "Bilinmeyen")
                            <br>
                            <i class="fas fa-calendar"></i> @blog.CreatedAt.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))
                        </p>
                        
                        <p class="card-text">
                            <small class="text-muted">
                                <i class="fas fa-file-text"></i> @(blog.BlogEntries?.Count ?? 0) yazı
                                <span class="mx-2">•</span>
                                <i class="fas fa-eye"></i> @blog.ViewCount görüntüleme
                            </small>
                        </p>
                        
                        <a href="@Url.Action("Details", "Blog", new { slug = blog.Slug })" 
                           class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-book-open"></i> Blog'u Oku
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <h5><i class="fas fa-info-circle"></i> Henüz blog yok</h5>
        <p>Henüz hiç blog oluşturulmamış. Navbar'daki "Yeni Blog" butonunu kullanarak ilk blogu oluşturun!</p>
    </div>
}