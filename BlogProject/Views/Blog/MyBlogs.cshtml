@model List<Blog>

@{
    ViewData["Title"] = "Bloglarım";
}

<h2>📚 Bloglarım</h2>

<a class="btn btn-success mb-3" asp-action="Create">➕ Yeni Blog Oluştur</a>

@if (Model.Count == 0)
{
    <div class="alert alert-info">Henüz blog oluşturmadınız.</div>
}
else
{
    <div class="list-group">
        @foreach (var blog in Model)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1">@blog.Title</h5>
                    <small class="text-muted">Slug: @blog.Slug</small>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@blog.Id" class="btn btn-sm btn-warning me-2">✏️ Düzenle</a>
                   <a asp-action="Details" asp-route-slug="@blog.Slug" class="btn btn-sm btn-info me-2">📄 Görüntüle</a>

                    <form asp-action="Delete" asp-route-id="@blog.Id" method="post" class="d-inline" onsubmit="return confirm('Bu blog silinsin mi?');">
                        <button type="submit" class="btn btn-sm btn-danger">🗑️ Sil</button>
                    </form>
                </div>
            </div>
        }
    </div>
}
